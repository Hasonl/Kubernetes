Keepalived master1 （172.31.9.160）

[root@k8s-m1 keepalived]# cat /etc/keepalived/keepalived.conf
global_defs {
    router_id master1
}
vrrp_script check-haproxy {
    script "killall -0 haproxy"
    interval 5
    weight -30
}
vrrp_instance VI-kube-master {
    state MASTER
    priority 120
    dont_track_primary
    interface ens18
    virtual_router_id 68
    advert_int 3
    track_script {
        check-haproxy
    }
    virtual_ipaddress {
        172.31.9.159
    }
}



